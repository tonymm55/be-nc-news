  "PATCH /api/articles/:article_id": {
    "description": "serves an object of a single updated article",
    "queries": ["article_id", "inc_votes"],
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
